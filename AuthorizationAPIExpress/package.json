{
  "name": "AuthorizationAPIExpress",
  "version": "1.0.0",
  "description": " Este servidor recibe las solicitudes de tokens de acceso del cliente y las emite una vez que el propietario del recurso se ha autenticado y ha dado su consentimiento.",
  "main": "index.js",
  "author": "moviedo",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc && tsc-alias && copy package.json dist",
    "start": "node dist/index.js",
    "start:babel2": "tsc babel-node --extensions \".ts,.js\" src/index.ts",
    "build:babel1": "babel src --extensions \".ts,.js\" -d dist --copy-files",
    "start:babel1": "npm run build:babel1 && node dist/index.js",
    "restart": "rimraf dist && npm run start",
    "test": "jest --verbose --silent --detectOpenHandles",
    "test:whatch": "yarn test -- --watchAll",
    "build:docker": "tsc && tsc-alias"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "license": "MIT",
  "dependencies": {
    "@types/morgan": "^1.9.9",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "config": "^4.0.0",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "shallow-equal-object": "^1.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.17",
    "@babel/node": "^7.22.15",
    "@babel/plugin-proposal-decorators": "^7.22.15",
    "@babel/plugin-transform-typescript": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@types/bcryptjs": "^2.4.4",
    "@types/chai": "^4.3.6",
    "@types/config": "^3.3.1",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.18",
    "@types/pem": "^1.14.4",
    "@types/supertest": "^6.0.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "chai": "^5.2.0",
    "cors": "^2.8.5",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}