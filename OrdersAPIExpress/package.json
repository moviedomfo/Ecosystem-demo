{
  "name": "comerce-pub",
  "version": "1.2.0",
  "description": "Express server that expose API to iteract with kafkajs",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon ./src/server.ts",
    "build": "tsc && tsc-alias && copy package.json dist",
    "buildlocal": "tsc && tsc-alias && copyfiles -u 1 src/**/*.json && copy package.json dist",
    "cpfiles": "copyfiles -u 1 src/**/*.json dist",
    "restart": "rimraf dist && npm run build && npm run start",
    "build-swagger": "tsoa spec-and-routes && tsc && babel src -d dist --source-maps --copy-files",
    "build-tsoa": "tsoa spec-and-routes",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "author": "moviedo",
  "license": "ISC",
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.8.0",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.8",
    "env-var": "^7.4.1",
    "express": "^5.1.0",
    "express-handlebars": "^7.0.7",
    "express-jwt": "^8.5.1",
    "helmet": "^8.1.0",
    "jwks-rsa": "^3.0.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.14.3",
    "morgan": "^1.10.0",
    "openapi-types": ">=7",
    "reflect-metadata": "^0.1.13",
    "shallow-equal-object": "^1.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.18",
    "@types/swagger-ui-express": "^4.1.8",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^8.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@common": "dist/common",
    "@infra": "dist/infra",
    "@models": "./src/models",
    "@domain": "dist/domain",
    "@services": "dist/services",
    "@application": "dist/application"
  }
}