{
  "name": "comerce-pub",
  "version": "1.2.0",
  "description": "Express server that expose API to iteract with kafkajs",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "babel src --extensions \".ts,.js\" -d dist --copy-files",
    "start": "npm run build && node dist/index.js",
    "start2": "ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "start3": "tsc babel-node --extensions \".ts,.js\" src/index.ts",
    "restart": "rimraf dist && npm run start",
    "build-swagger": "tsoa spec-and-routes && tsc && babel src -d dist --source-maps --copy-files",
    "build-tsoa": "tsoa spec-and-routes",
    "predev": "npm run swagger",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "author": "moviedo",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@kafkajs/confluent-schema-registry": "^3.2.1",
    "awilix": "^7.0.3",
    "awilix-express": "^7.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6",
    "express-jwt": "^6.1.0",
    "helmet": "^4.6.0",
    "jwks-rsa": "^2.0.5",
    "kafkajs": "^2.2.0",
    "mongoose": "^6.5.3",
    "morgan": "^1.10.0",
    "openapi-types": ">=7",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^4.1.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/node": "^7.18.10",
    "@babel/plugin-syntax-decorators": "^7.21.0",
    "@babel/plugin-transform-typescript": "^7.18.12",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@tsconfig/node14": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.13",
    "@types/swagger-ui-express": "^4.1.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.3.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
  }
}
