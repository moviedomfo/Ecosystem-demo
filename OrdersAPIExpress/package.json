{
  "name": "comerce-pub",
  "version": "1.2.0",
  "description": "Express server that expose API to iteract with kafkajs",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc && tsc-alias && copy package.json dist",
    "buildlocal": "tsc && tsc-alias && copyfiles -u 1 src/**/*.json && copy package.json dist",
    "build-babel": "babel src --extensions \".ts,.js\" -d dist --copy-files",
    "cpfiles": "copyfiles -u 1 src/**/*.json dist",
    "start2": "ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "restart": "rimraf dist && npm run build && npm run start",
    "build-swagger": "tsoa spec-and-routes && tsc && babel src -d dist --source-maps --copy-files",
    "build-tsoa": "tsoa spec-and-routes",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "author": "moviedo",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.22.15",
    "@kafkajs/confluent-schema-registry": "^3.2.1",
    "awilix": "^7.0.3",
    "awilix-express": "^7.0.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.8",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "express-handlebars": "^6.0.6",
    "express-jwt": "^8.4.1",
    "helmet": "^7.0.0",
    "jwks-rsa": "^3.0.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^7.5.2",
    "morgan": "^1.10.0",
    "openapi-types": ">=7",
    "reflect-metadata": "^0.1.13",
    "shallow-equal-object": "^1.1.1",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^5.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.17",
    "@babel/node": "^7.22.15",
    "@babel/plugin-transform-typescript": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@tsconfig/node14": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.13",
    "@types/swagger-ui-express": "^4.1.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.2.2"
  }
}
